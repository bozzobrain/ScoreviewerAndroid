<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlling"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/teamdisplay"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:layout_weight="1"
            android:text="Team1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:layout_weight="1"
            android:text="Team2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scoredisplayfootball"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teamdisplay"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight ="5dp"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/Team1ScoreFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="40sp"
                android:text="@string/addone" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/Team2ScoreFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="40sp"
                android:text="@string/addtwo" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scoreaddition1"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoredisplayfootball"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight ="5dp"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/TouchdownTeam1"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="@string/touchdown" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp">
            <Button
                android:id="@+id/TouchdownTeam2"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="@string/touchdown" />




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scoreaddition2"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreaddition1"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight ="5dp"
            android:layout_marginTop="0dp">


            <Button
                android:id="@+id/ExtraPointTeam1"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="@string/extrapoint" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp">

            <Button
                android:id="@+id/ExtraPointTeam2"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="@string/extrapoint" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/scoresubtraction1"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreaddition2"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight ="5dp"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/RemoveTouchdownTeam1"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="@string/removetouchdown" />



        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp">
            <Button
                android:id="@+id/RemoveTouchdownTeam2"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="@string/removetouchdown" />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scoresubtraction2"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoresubtraction1">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight ="5dp"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/RemoveExtraPointTeam1"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="@string/removeextrapoint" />



        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp">
            <Button
                android:id="@+id/RemoveExtraPointTeam2"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:text="@string/removeextrapoint" />



        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/FB_resetscores"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/scoresubtraction2"
        android:layout_marginTop="25dp"
        android:text="@string/resetscores" />

</RelativeLayout>