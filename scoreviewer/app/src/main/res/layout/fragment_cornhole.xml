        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scoresubtraction1"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreaddition6"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight ="5dp"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/CH_Sub1Team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/subone" />

            <Button
                android:id="@+id/CH_Sub2Team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/subtwo" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp">
            <Button
                android:id="@+id/CH_Sub1Team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/subone" />

            <Button
                android:id="@+id/CH_Sub2Team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/subtwo" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scoreover21"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoresubtraction1"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight ="5dp"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/CH_Over21Team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cornhole_wentover" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp">
            <Button
                android:id="@+id/CH_Over21Team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cornhole_wentover" />
        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/CH_resetscores"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/scoreover21"
        android:layout_marginTop="25dp"
        android:text="@string/resetscores" />

